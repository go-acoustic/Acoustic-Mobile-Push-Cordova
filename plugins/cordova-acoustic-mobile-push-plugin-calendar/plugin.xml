<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="cordova-acoustic-mobile-push-plugin-calendar" version="3.9.14">
  <name>Calendar Action for Acoustic MCE Cordova Plugin</name>
  <author>Acoustic MCE</author>
  <description>Calendar Action for Acoustic MCE Push Services</description>
  <keywords>mce</keywords>
  <license>Apache 2.0 License</license>
  <engines>
    <engine name="cordova" version=">=3.0" />
  </engines>
  <js-module src="www/js/MCECalendarPlugin.js" name="MCECalendarPlugin">
    <clobbers target="MCECalendarPlugin" />
  </js-module>
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="MCECalendarPlugin" >
                <param name="ios-package" value="MCECalendarPlugin"/>
            </feature>
        </config-file>    
        <framework src="EventKit.framework" />
        <framework src="EventKitUI.framework" />
        <header-file src="src/ios/MCECalendarPlugin.h" />
        <source-file src="src/ios/MCECalendarPlugin.m" />
        <config-file target="*-Info.plist" parent="NSCalendarsUsageDescription">
            <string>Add interesting things to the calendar</string>
        </config-file>
        <podspec>
            <config>
                <source url="https://github.com/CocoaPods/Specs.git"/>
            </config>
            <pods use-frameworks="true">
                <pod name="AcousticMobilePushNotificationDebug" />
            </pods>
        </podspec>
    </platform>
    <platform name="android">
      <config-file target="config.xml" parent="/*">
        <feature name="MCECalendarPlugin" >
          <param name="android-package" value="co.acoustic.mobile.push.plugin.calendar.MCECalendarPlugin"/>
        </feature>
      </config-file>
      <framework src="src/android/build-extras.gradle" custom="true" type="gradleReference" />
      <source-file src="src/android/assets/mce/plugins/calendar.json" target-dir="assets/mce/plugins" framework="false" />
    </platform>
</plugin>
